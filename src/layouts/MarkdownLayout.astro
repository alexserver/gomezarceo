---
import Sidebar from '../components/Sidebar.astro';
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Alejandro Gomez Website" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/main.css" />
    <noscript><link rel="stylesheet" href="/styles/noscript.css" /></noscript>
    <title>{frontmatter.title}</title>
  </head>
  <body class="is-preload">
    <div id="wrapper">
      <div id="bg"></div>
      <div id="overlay"></div>
      <div id="main">
        <div class="main-container flex gap-2 justify-between h-screen overflow-auto max-w-5xl bg-gradient-to-l from-indigo-500 from-20% via-indigo-400">
          <Sidebar />
          <div class="post px-4 text-slate-800 text-sm overflow-auto text-left py-10">
            <slot />
          </div>
        </div>

        <!-- Footer -->
        <footer id="footer">
          <span class="copyright"
            >&copy; Powered by Astro and <a href="http://html5up.net"
              >HTML5 UP</a
            >.</span
          >
        </footer>
      </div>
    </div>
    <script>
      window.onload = function () {
        document.body.classList.remove("is-preload");
      };
      window.ontouchmove = function () {
        return false;
      };
      window.onorientationchange = function () {
        document.body.scrollTop = 0;
      };
    </script>
  </body>
</html>
<style>
  .post {
    display: block;
    top: 0;
    font-family: sans-serif;
  }
</style>
